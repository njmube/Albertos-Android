<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_app_2"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/background_view">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="200dp"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_app"
                android:layout_marginTop="10dp"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="270dp"
                        android:layout_height="167dp"
                        android:id="@+id/img_felicidades"
                        android:layout_marginTop="-25dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qr_felicidades" />

                    <ImageView
                        android:id="@+id/qr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_gravity="center_horizontal"
                        />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:id="@+id/btnCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/primary_dark"
                        android:textColor="@color/text_color"
                        android:text="@string/cerrar_ventana"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:onClick="CerrarVentana"
                        />

                    <ImageView
                        android:layout_width="304dp"
                        android:layout_height="43dp"
                        android:id="@+id/img_condiciones_gratis"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/condiciones_gratis"
                        android:layout_weight="0.13" />

                </LinearLayout>

            </ScrollView>



        </LinearLayout>



    </LinearLayout>

</RelativeLayout>